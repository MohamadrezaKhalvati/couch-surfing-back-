generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid()) @db.Uuid
  username       String   @unique
  password       String
  fullName       String
  email          String   @unique
  birthday       DateTime
  location       String
  userProfileUrl String?
  job            String
  langauge       String
  status         String
  AboutMe        String
  gender         Gender
  role           Role     @default(Member)
  isActive       Boolean  @default(true)
  createdDate    DateTime @default(now())
  updatedDate    DateTime @updatedAt()
}

enum Role {
  Admin
  Member
}

enum Gender {
  Male
  Female
}
