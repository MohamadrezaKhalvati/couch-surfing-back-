generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @db.Uuid
  username       String   @unique
  password       String
  fullName       String
  email          String   @unique
  gender         Gender
  location       String
  userProfileUrl String?
  createdDate    DateTime @default(now())
  updatedDate    DateTime
}

enum Gender {
  Male
  Female
}
